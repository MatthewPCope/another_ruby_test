<h1>Sign In</h1>

<%= form_with url: sign_in_path do |form| %>
    <div class="mb-4">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "matt@matt.com" %>
    </div>
    <div class="mb-4">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: "12345678" %>
        <%= link_to "Forgot your password?", password_reset_path %>
    </div>
    <div class="mb-4">
        <%= form.submit "Sign In", class: "btn btn-primary" %>
    </div>
<%  end  %>